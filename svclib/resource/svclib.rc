#include <WinVer.h>

//
// Version
//

VS_VERSION_INFO VERSIONINFO
 FILEVERSION SVCLIB_NUM_MAJOR_VER_SIMPLE,SVCLIB_NUM_MINOR_VER_SIMPLE,SVCLIB_NUM_PATCH_VER_SIMPLE,0
