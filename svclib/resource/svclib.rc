 FILEFLAGSMASK 0x17L
#ifdef _DEBUG
 FILEFLAGS 0x1L
#else
 FILEFLAGS 0x0L
#endif
 FILEOS 0x4L
 FILETYPE 0x1L
 FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "000004b0"
        BEGIN
            VALUE "CompanyName", "Augustin Preda"
            VALUE "FileDescription", "svclib - service library"
            VALUE "FileVersion", SVCLIB_STR_FILE_VERSION
            VALUE "InternalName", "svclib"
            VALUE "LegalCopyright", "Copyright (C) 2015"
            VALUE "OriginalFilename", "svclib.dll"
            VALUE "ProductName", "Service Library"
            VALUE "ProductVersion", SVCLIB_STR_PROD_VERSION
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0, 1200
    END
END

